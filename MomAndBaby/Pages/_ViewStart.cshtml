@{
    var path = ViewContext.RouteData.Values["page"]!.ToString();

    if (path!.StartsWith("/Dashboard", StringComparison.OrdinalIgnoreCase))
    {
        Layout = "_LayoutDashboard";
    } else if (path!.StartsWith("/Main", StringComparison.OrdinalIgnoreCase))
    {
        Layout = "_LayoutMain";
    } else if (path!.StartsWith("/Authen", StringComparison.OrdinalIgnoreCase))
    {
        Layout = "_LayoutMain";
    } else
    {
        Layout = "_Layout";
    }
}
