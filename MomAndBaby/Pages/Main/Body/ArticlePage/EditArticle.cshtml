@page "/edit-article"
@model EditArticleModel
@{
    ViewData["Title"] = "Edit Article";
}

<main class="main-content">
    <section class="page-title-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 m-auto">
                    <div class="page-title-content text-center">
                        <h2 class="title">Edit Article</h2>
                        <div class="bread-crumbs">
                            <a href="/">Home</a><span class="breadcrumb-sep">//</span><span class="active">Edit Article</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="edit-article-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 m-auto">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" name="Title" value="@Model.Article.Title" required>
                        </div>
                        <div>
                            <label>Content</label>
                            <input id="editor-input" name="Content" required type="hidden" asp-for="@Model.Article.Content" />
                            <div class="form-control p-0">
                                <div class="comment-editor border-0" id="ecommerce-category-description">
                                    <div id="editor" style="width: 100%; height: 300px;">
                                        @Html.Raw(Model.Article.Content)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ImageUpload">Upload Image</label>
                            <input type="file" id="ImageUpload" name="ImageUpload" class="form-control-file" />
                        </div>
                        <button style="margin-top: 10px" type="submit" class="btn btn-primary">Save Changes</button>
                    </form>

                </div>
            </div>
        </div>
    </section>

</main>
