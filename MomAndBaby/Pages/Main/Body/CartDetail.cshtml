@page "/cart-detail"
@model MomAndBaby.Pages.Main.Body.CartDetailModel

@{
    ViewData["Title"] = "Cart Details";
}

<main class="main-content">
    <!-- Start Page Title Area -->
    <section class="page-title-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 m-auto">
                    <div class="page-title-content text-center">
                        <h2 class="title">Cart Details</h2>
                        <div class="bread-crumbs">
                            <a href="index.html">Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Page Title Area -->

    <!-- Start Cart Area Wrapper -->
    <section class="product-area cart-page-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 m-auto">
                    <div class="section-title text-center">
                        <h2 class="title">Cart Details</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table-wrap">
                        <div class="cart-table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="width-thumbnail">Image</th>
                                        <th class="width-name">Product Name</th>
                                        <th class="width-quantity">Quantity</th>
                                        <th class="width-price">Price</th>
                                        <th class="width-remove">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cart in Model.CartItems)
                                    {
                                        <form method="post">
                                        <tr>
                                            <input type="hidden" name="productId" value="@cart.Id" />
                                            <td class="product-thumbnail">
                                                <img src="@cart.Image" alt="@cart.Name">
                                            </td>
                                            <td class="product-name">
                                                <h5>@cart.Name</h5>
                                            </td>
                                            <td class="cart-quality">
                                                <div class="product-details-quality">
                                                    <input type="number" class="input-text qty text" step="1" min="1" max="100" name="quantity" value="@cart.NumberOfProduct" placeholder="">
                                                        @* <input value="12" /> *@
                                                </div>
                                            </td>
                                            <td class="product-price">
                                                <span class="amount">@cart.UnitPrice.ToString("C")</span>
                                            </td>
                                            <td class="product-remove">
                                                <button type="submit" class="btn btn-danger" asp-page-handler="RemoveFromCart">
                                                    Remove
                                                </button>
                                                <button type="submit" class="btn btn-danger" asp-page-handler="UpdateQuantity">
                                                    Update
                                                </button>
                                            </td>
                                        </tr>
                                        </form>
                                        
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="cart-shiping-update-wrapper">
                            <div class="cart-shiping-btn continure-btn">
                                <a class="btn btn-link" href="/shopping"><i class="ion-ios-arrow-left"></i> Back To Shop</a>
                            </div>
                        </div>
                    </div>

                    <!--== Start Checkout Area Wrapper ==-->
                    <form method="post" asp-page-handler="Pay">
                    <section class="product-area shop-checkout-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6 m-auto">
                                    <div class="section-title text-center">
                                        <h2 class="title">Checkout</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">

                                </div>
                            </div>                     
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="billing-info-wrap">
                                        <h3>Billing Details</h3>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="billing-info mb-20">
                                                    <label>First name <abbr class="required"
                                                            title="required">*</abbr></label>
                                                    <input asp-for="FirstName" class="form-control" required>
                                                </div>
                                            </div>
                                            
                                    <div class="col-12">
                                    <div class="billing-info mb-20">
                                        <label>Address <abbr class="required" title="required">*</abbr></label>
                                        <input asp-for="Address" class="form-control" id="address-input" required>
                                    </div>
                                     <div class="css_select_div">
                                        @* <select class="css_select" asp-for="Tinh" id="tinh" name="tinh" title="Chọn Tỉnh Thành" required>
                                            <option value="0">Tỉnh Thành</option>
                                        </select> *@
                                        @* <select class="css_select" asp-for="Quan" id="quan" name="quan" title="Chọn Quận Huyện" required>
                                            <option value="0">Quận Huyện</option>
                                        </select> *@
                                        @* <select class="css_select" asp-for="Phuong" id="phuong" name="phuong" title="Chọn Phường Xã" required>
                                            <option value="0">Phường Xã</option>
                                        </select> *@
                                    </div>

                                    </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                <div class="your-order-area">
                                    <h3>Your order</h3>
                                    <div class="your-order-wrap">
                                        <div class="your-order-info-wrap">
                                            <div class="your-order-title">
                                                <h4>Product <span>Subtotal</span></h4>
                                            </div>
                                            @foreach (var cart in Model.CartItems)
                                            {
                                                <div class="your-order-product">
                                                    <ul>
                                                        <li>@cart.Name<span>$@cart.UnitPrice</span></li>

                                                    </ul>
                                                </div>

                                            }
                                            <div class="your-order-total">
                                                <h3>Total <span>$@Model.Total</span></h3>
                                            </div>
                                        </div>
                                        <div class="payment-method">

                                            <div class="pay-top sin-payment sin-payment-3">
                                                <input id="payment-method-4" class="input-radio" type="radio"
                                                    value="cheque" name="payment_method">
                                                <label for="payment-method-4">PayPal <img alt=""
                                                        src="assets/img/icons/payment-3.png"><a href="#">What is
                                                        PayPal?</a></label>
                                                <div class="payment-box payment_method_bacs">
                                                    <p>Pay via PayPal; you can pay with your credit card if you
                                                        don’t have a PayPal account.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="payment-condition">
                                            <p>Your personal data will be used to process your order, support your
                                                experience throughout this website, and for other purposes described
                                                in our <a href="#">privacy policy</a>.</p>
                                        </div>

                                    </div>
                                    
                                        <button class="btn btn-link" type="submit">Pay with PayPal</button>
                                    
                                </div>
                            </div>
                                 </div>
                            </div>
                        </div>    
                    </section>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 m-auto">
                    <div class="section-title text-center">
                        <h2 class="title">Checkout bill</h2>
                    </div>
                </div>
            </div>
            <form method="post" asp-page-handler="Pay" class="row" id="checkout-form">
                <div class="col-md-6 col-lg-4">
                    <div class="cart-calculate-discount-wrap mb-40">
                        <h4>Calculate shipping </h4>
                        <div class="calculate-discount-content">
                            <div class="input-style">
                                <input asp-for="FirstName" class="form-control" placeholder="FullName" required>
                            </div>
                            <div class="input-style">
                                <input asp-for="Address" class="form-control" id="address-input" placeholder="Address" required>
                            </div>
                            <div class="input-style">
                                <input type="number" class="form-control" id="address-input" placeholder="Phone" required>
                            </div>
                            <div class="calculate-discount-btn">
                                <a class="btn btn-link" href="#/">Update</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="cart-calculate-discount-wrap mb-40">
                        <h4>Calculate shipping </h4>
                        <div class="calculate-discount-content">
                            <div class="select-style">
                                <select class="select-active css_select" asp-for="Tinh" id="tinh" name="tinh" title="Chọn Tỉnh Thành" required>
                                    <option value="0">Tỉnh Thành</option>
                                </select>
                            </div>
                            <div class="select-style">
                                <select class="select-active css_select" asp-for="Quan" id="quan" name="quan" title="Chọn Quận Huyện" required>
                                    <option value="0">Quận Huyện</option>
                                </select>
                            </div>
                            <div class="select-style">
                                <select class="select-active css_select" asp-for="Phuong" id="phuong" name="phuong" title="Chọn Phường Xã" required>
                                    <option value="0">Phường Xã</option>
                                </select>
                            </div>
                        </div>
                        <div class="cart-calculate-discount-wrap mb-40">
                            <h4>Coupon Discount </h4>
                            <div class="calculate-discount-content">
                                <p>Enter your coupon code if you have one.</p>
                                <div class="input-style">
                                    <input type="text" placeholder="Coupon code">
                                </div>
                                <div class="calculate-discount-btn">
                                    <a class="btn btn-link" href="#/">Apply Coupon</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="grand-total-wrap">
                        <div class="grand-total-content">
                            <h3>Subtotal <span>@Model.Total.ToString("C")</span></h3>
                            <div class="grand-shipping">
                                <span>Payment</span>
                                <ul>
                                    <li><input type="radio" name="shipping" value="info" checked="checked"><label>Money</label></li>
                                    <li><input type="radio" name="shipping" value="info" checked="checked"><label>Paypal</label></li>
                                </ul>
                            </div>
                            <div class="shipping-country">
                                <p>Discount: <strong>0</strong>%</p>
                            </div>
                            <div class="shipping-country">
                                <p>Shipping: <strong>10</strong>VND</p>
                            </div>
                            <div class="grand-total">
                                <h4>Total <span>@Model.Total.ToString("C")</span></h4>
                            </div>
                        </div>
                        <div class="grand-total-btn">
                            <button type="submit" class="btn btn-link btn-checkout" style="">Proceed to checkout</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- End Cart Area Wrapper -->
</main>

@section Scripts {
    <script src="https://esgoo.net/scripts/jquery.js"></script>
    <style type="text/css">
        .css_select_div { text-align: center; }
        .css_select { display: inline-table; width: 25%; padding: 5px; margin: 5px 2%; border: solid 1px #686868; border-radius: 5px; }
    </style>
    <script>
        $(document).ready(function() {
            // Fetch provinces
            $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm', function(data_tinh) {
                if (data_tinh.error == 0) {
                    $.each(data_tinh.data, function(key_tinh, val_tinh) {
                        $("#tinh").append('<option value="' + val_tinh.id + '">' + val_tinh.name + '</option>');
                    });
                    $("#tinh").change(function(e) {
                        var idtinh = $(this).val();
                        // Fetch districts
                        $.getJSON('https://esgoo.net/api-tinhthanh/2/' + idtinh + '.htm', function(data_quan) {
                            if (data_quan.error == 0) {
                                $("#quan").html('<option value="0">Quận Huyện</option>');
                                $("#phuong").html('<option value="0">Phường Xã</option>');
                                $.each(data_quan.data, function(key_quan, val_quan) {
                                    $("#quan").append('<option value="' + val_quan.id + '">' + val_quan.name + '</option>');
                                });
                                // Fetch wards
                                $("#quan").change(function(e) {
                                    var idquan = $(this).val();
                                    $.getJSON('https://esgoo.net/api-tinhthanh/3/' + idquan + '.htm', function(data_phuong) {
                                        if (data_phuong.error == 0) {
                                            $("#phuong").html('<option value="0">Phường Xã</option>');
                                            $.each(data_phuong.data, function(key_phuong, val_phuong) {
                                                $("#phuong").append('<option value="' + val_phuong.id + '">' + val_phuong.name + '</option>');
                                            });
                                        }
                                    });
                                });
                            }
                        });
                    });
                }
            });

            // Combine address parts on form submission and validate
            $('#checkout-form').submit(function(e) {
                var address = $('#address-input').val();
                var tinh = $('#tinh option:selected').text();
                var quan = $('#quan option:selected').text();
                var phuong = $('#phuong option:selected').text();
                var fullAddress = `${address}, ${phuong}, ${quan}, ${tinh}`;

                // Validate select fields
                if (!validateSelects()) {
                    alert('Please select all required fields.');
                    return false;
                }

                $('#address-input').val(fullAddress);
            });

            // Function to validate select fields
            function validateSelects() {
                var valid = true;
                $('.css_select').each(function() {
                    if ($(this).val() === "0") {
                        valid = false;
                        $(this).css('border', '1px solid red');
                    } else {
                        $(this).css('border', '1px solid #686868');
                    }
                });
                return valid;
            }
            function submitForm() {
                document.getElementById('update-form').submit();
            }

        });


    </script>
}