@page "/verify"
@model MomAndBaby.Pages.Main.Body.VerifyAccountModel
@{
}



<main class="main-content">
    <!--== Start Page Title Area ==-->
    <section class="page-title-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 m-auto">
                    <div class="page-title-content text-center">
                        <h2 class="title">My Account</h2>
                        <div class="bread-crumbs"><a href="index.html"> Home </a><span class="breadcrumb-sep"> // </span><span class="active"> My Account</span></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End Page Title Area ==-->
    <section class="login-register-area">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="login-register-content">
                    <div class="login-register-title mb-30">
                        <h2>Verify Account</h2>
                        <p style="margin-left: 60px">Please input OTP was sent in your email</p>
                    </div>
                    <div class="login-register-style">
                        <form method="post">
                            <div style="color: red; margin-bottom: 30px">@TempData["MessageVerify"]</div>
                            <div style="color: deepskyblue; margin-bottom: 30px">@TempData["MessageResend"]</div>
                           @*  <div class="login-register-input">
                                <input type="hidden" asp-for="Email" placeholder="Email" value="@Model.Email">
                            </div> *@
                            <div class="login-register-input">
                                <input type="text" asp-for="Otp" placeholder="OTP">
                            </div>
                            <button type="submit" style="color: deepskyblue; text-decoration: underline; border: none; background: none; padding: 0; margin: 0;" asp-page-handler="ResendOTP">Resend OTP</button> <br />

                           
                            
                            <div class="btn-style-3">
                                <button class="btn" asp-page-handler="RegisterAccount">Verify</button>
                            </div>

                        </form>
                        
                    </div>
                </div>
            </div>

        </div>
    </section>



    <!--== End Login Wrapper ==-->
</main>